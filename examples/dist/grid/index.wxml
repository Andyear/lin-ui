<view class="l-grid l-class">
    <view bindtap="tapGrid" class="l-grid-item l-class-grid {{index%colNum !== colNum-1 &&(showBorder||showRowBorder) ? 'side-grid':''}} {{gridItems.length%colNum!==0 && (index-gridItems.length+gridItems.length%colNum) < 0 &&(showBorder||showColBorder)? 'center-grid':''}} {{gridItems.length%colNum===0 && (index-gridItems.length+3) &&(showBorder||showColBorder) < 0? 'center-grid':''}}" wx:for="{{gridItems}}" wx:key="{{item.key}}" style="min-width:{{100/colNum}}%;" data-index="{{index}}">
        <slot name="{{item.key}}"></slot>
    </view>
</view>